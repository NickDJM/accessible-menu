{
  "name": "accessible-menu",
  "version": "3.0.0-alpha.1",
  "description": "A JavaScript library to help you generate WCAG accessible menus in the DOM.",
  "main": "index.js",
  "files": [
    "index.js",
    "dist/",
    "src/"
  ],
  "scripts": {
    "prepare": "husky install",
    "commit": "git-cz",
    "lint": "npm run eslint && npm run prettier",
    "eslint": "eslint --ext .js --fix .",
    "prettier": "prettier '**/*.js' --write --ignore-path .eslintignore",
    "prerelease": "npm run lint && npm run build && npm test && npm run docs",
    "release": "git add dist/. && standard-version -a",
    "build": "rollup --config .rollup.config.js",
    "build:test": "sass test/scss:test/css",
    "build:docs": "jsdoc src/*.js -c jsdoc.config.js -d docs/dist",
    "test": "jest",
    "docs": "node generateDocs.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NickDJM/accessible-menu.git"
  },
  "keywords": [
    "menu",
    "accessible",
    "accessibility",
    "wai-aria",
    "aria",
    "a11y",
    "nav",
    "navigation",
    "menubar",
    "disclosure menu"
  ],
  "author": "Nick Milton",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NickDJM/accessible-menu/issues"
  },
  "homepage": "https://github.com/NickDJM/accessible-menu#readme",
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@rollup/plugin-babel": "^5.3.0",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^32.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "jest-extended": "^0.11.5",
    "jsdoc": "^3.6.7",
    "jsdoc-to-markdown": "^7.0.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.1.2",
    "rollup": "^2.33.1",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.29.0",
    "standard-version": "^9.0.0",
    "terser": "^5.6.1"
  }
}
